@model Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link rel="stylesheet" href="style.css">
    <style>
        .btn-primary {
            margin: 0 0 1rem 8.3rem !important;
        }
    </style>
    <script>

    </script>
</head>
<body>
<form asp-controller="Customer" asp-action="Add" method="post" class="mt-4">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" asp-for="FirstName" />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" class="form-control" asp-for="LastName" />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="Male" name="Gender" value="Male" checked="@(Model.Gender == "Male" ? "checked" : "")" />

            <label class="form-check-label" for="Male">Male</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="Female" name="Gender" value="Female" checked="@(Model.Gender == "Female" ? "checked" : "")" />

            <label class="form-check-label" for="Female">Female</label>
        </div>
    </div>
    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" class="form-control" asp-for="Username" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" />
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 form-label fw-bold">Please Select Role</label>
        <select class="form-select" id="RoleId" name="RoleId" multiple>
           
            @foreach (var role in ViewBag.CustomerRoles1)
            {
                <option value="@role.RoleId">@role.RoleName</option>
            }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="tel" id="Phone" name="Phone" class="form-control" asp-for="Phone" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
</body>
</html>